{
    "name": "antidot-fw/container",
    "type": "library",
    "description": "PSR-11 container implementation made for Antidot Framework",
    "keywords": [
        "antidot-fw",
        "container"
    ],
    "homepage": "https://github.com/antidot-fw/container",
    "license": "MIT",
    "authors": [
        {
            "name": "Koldo Picaza",
            "homepage": "https://github.com/kpicaza",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpro/grumphp": "^1.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.0",
        "roave/infection-static-analysis-plugin": "^1.32",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^5.0 || ^6.0",
        "vimeo/psalm": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "Antidot\\Container\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntidotTest\\Container\\": "tests"
        }
    },
    "scripts": {
        "check-all": [
            "@cs-check",
            "@test",
            "@inspect",
            "@psalm",
            "@infection"
        ],
        "cs-check": "phpcs src --colors",
        "cs-fix": "phpcbf src --colors",
        "infection": "XDEBUG_MODE=coverage roave-infection-static-analysis-plugin",
        "inspect": "phpstan analyse src -l7 --ansi",
        "psalm": "psalm",
        "test": "phpunit --colors=always"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true
        }
    }
}
